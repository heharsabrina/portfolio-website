---
import BaseLayout from '../layouts/BaseLayout.astro';

import Hero from '../components/Hero.astro';
---

<BaseLayout title="About | Sabrina Hehar" description="About Sabrina">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
				tagline="A brief introduction about myself."
			>
			</Hero>

			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<ul>
						<li><b>Bachelor of Engineering in Computer Science and Engineering</b> (2022 - present)
							<br><br>
							<i><a href="https://www.sjec.ac.in/" target="_blank">St Joseph Engineering College</a></i>
							<br>Vamanjoor, Mangalore
						</li>
						<br><br>
						<li><b>Higher Secondary School</b> (2020 - 2022)
							<br><br>
							<i><a href="https://www.apsmumbai.com/" target="_blank">Army Public School</a></i>
							<br>Colaba, Mumbai
						</li>
						<br><br>
						<li><b>Secondary School</b> (2014 - 2020)
							<br><br>
							<i><a href="https://sttheresasicse.org/" target="_blank">St Theresa's School</a></i>
							<br>Bendur, Mangalore
						</li>
					</ul>

				</div>
			</section>
			<section>
				<h2 class="section-title">Achievements</h2>
				<div class="content">
					<ul>
						<li><b>Runner-up in Web Ally</b><br> (March 2023)
							<br>
							<br><i>Tiara 2023, National Techno-Cultural Fest</i>
							<br>SJEC, Mangalore
						</li>
						<br><br>
						<li><b>Top 10 Consistent Participant in SJEC 30 Days of Code</b><br> (December 2022 - January 2023)
							<br>
							<br><i>SJEC-30-DAYS-OF-CODE</i>
							<br>SJEC, Mangalore
						</li>
						
					</ul>
				</div>
			</section>
			<section>
				<h2 class="section-title">Hobbies</h2>
				<div class="content">
					<ul>
						<li>Coding</li>
						<br>
						<li>Music</li>
						<br>
						<li>Sports</li>
						<br>
						<li>Drama</li>
					</ul>
				</div>
			</section>
		</main>
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 55% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
