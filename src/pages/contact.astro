---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';


import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
import { Icon } from 'astro-icon';
const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Contact | Sabrina Hehar"
	description="Contact Sabrina Hehar"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Contact"
				tagline="Let's connect."
				align="center"
			/>		
		</main>
	</div>

    <form
		target='_blank'
      	action='https://formsubmit.co/d62a6662e6ee6a90a9829329c2ab24ca'
      	method='POST'
    >

    <div>
        <label html-for='name-field'>
            <div id='name-field'>
              <input type='text' name='name' class='w-full input input-bordered' placeholder='Your Name' required />
            </div>
        </label>
    </div>

    <div>
        <label html-for='email-field'>
            <div id='email-field'>
              	<input
                	type='email'
                	name='email'
                	class='w-full input input-bordered'
                	placeholder='Your Email'
                	required
              	/>
            </div>
          </label>
        </div>



      <div>
        <label html-for='message-field'>
          <div id='message-field'>
            <textarea
              placeholder='Message'
              name='message'
              rows={7}
              required></textarea>
          </div>
        </label>
      </div>
	  
      <div>
        <button type='submit'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-tabler icon-tabler-send'
            width='171'
            height='37'
            viewBox='0 0 24 24'
            stroke-width='2'
            stroke='currentColor'
            fill='none'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <path stroke='none' d='M0 0h24v24H0z' fill='none' ></path>
            <line x1='10' y1='14' x2='21' y2='3'></line>
            <path d='M21 3l-6.5 18a0.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a0.55 .55 0 0 1 0 -1l18 -6.5' ></path>
          </svg> Send
        </button>
        <button type='reset' class='gap-1 btn text-slate-300'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            class='icon icon-tabler icon-tabler-eraser'
            width='171'
            height='37'
            viewBox='0 0 24 24'
            stroke-width='2'
            stroke='currentColor'
            fill='none'
            stroke-linecap='round'
            stroke-linejoin='round'
          >
            <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
            <path d='M19 19h-11l-4 -4a1 1 0 0 1 0 -1.41l10 -10a1 1 0 0 1 1.41 0l5 5a1 1 0 0 1 0 1.41l-9 9'></path>
            <line x1='18' y1='12.3' x2='11.7' y2='6'></line>
          </svg> Clear
        </button>
      </div>
    </form>
    <div class="stack gap-20 lg:gap-48">
      <div class="wrapper stack gap-8 lg:gap-20">
        <header class="hero">
          <Hero
            title="Via Platforms"
            tagline=""
            align="center"
          >
          </Hero>
        </header>
      </div>
    </div>
</BaseLayout>

<style>
  
  ::placeholder {
    color: rgb(110, 21, 21);
  }
  form {
    	width: 450px;
    	margin:25px auto;
      font-family: var(--font-body);
      font-size: var(--text-xl);
	}
  input[type=text] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border: none;
    border-bottom: 3px solid rgb(0, 0, 0);
    font-size: 16px;
  }
  input[type="text"]:focus {
    outline: none;
  }
  input[type=email] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border: none;
    border-bottom: 3px solid rgb(0, 0, 0);
    font-size: 16px;
    margin-bottom: 17px;
  }
  input[type="email"]:focus {
    outline: none;
  }
  textarea {
    width: 100%;
    height: 200px;
    padding: 12px 20px;
    box-sizing: border-box;
    border: none;
    border-bottom: 3px solid #000000;
    background-color: #ffffff;
    font-size: 16px;
    resize: none;
    outline: none;
  }
</style>
